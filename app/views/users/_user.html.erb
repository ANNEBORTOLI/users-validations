
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @user, url: user_path(@user), method: :patch, class: "needs-validation", novalidate: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", readonly: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, class: "form-control", readonly: true %>
        </div>

        <div class="mb-3">
          <%= form.label :phone, class: "form-label" %>
          <%= form.text_field :phone, class: "form-control", readonly: true %>
        </div>

        <div class="mb-3">
          <%= form.label :cpf, class: "form-label" %>
          <%= form.text_field :cpf, class: "form-control", readonly: true %>
        </div>

        <div>
          <%= link_to "Update", edit_user_path(@user), class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <div><%= link_to "Back", users_path %></div>
    </div>
  </div>
</div>
